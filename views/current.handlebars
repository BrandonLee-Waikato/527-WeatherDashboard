<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<section class="weather-info">

    <div class="weather-card">
        <h1>Current Weather In Your Area</h1>
        <div class="temperature">
            <i class="fas fa-thermometer-half"></i> Temperature: {{temperature}}
        </div>
        <div class="details">
            <p><i class="fas fa-tint"></i> Humidity: {{humidity}}</p>
            <p><i class="fas fa-wind"></i> Wind Speed: {{windSpeed}}</p>
            <p><i class="fas fa-cloud-rain"></i> Rain   : {{rain}}</p>
<!--            define and implemented more functions down here-->
        </div>
    </div>
</section>